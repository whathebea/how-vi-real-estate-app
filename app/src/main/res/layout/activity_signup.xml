<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <TextView
        android:id="@+id/mainTextSignup"
        android:layout_width="330dp"
        android:layout_height="74dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Registre-se e encontre sua casa nova!"
        android:textAlignment="center"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.08" />

    <TextView
        android:id="@+id/subTextSignup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:fontFamily="@font/poppins_regular"
        android:text="Ã‰ bem rapidinho!"
        android:textAlignment="center"
        android:textColor="@color/dark_grey"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mainTextSignup"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/nameInputSignup"
        android:layout_width="328dp"
        android:layout_height="58dp"
        android:layout_marginTop="27dp"
        android:ems="10"
        android:inputType="text"
        android:hint="Nome"
        android:fontFamily="@font/poppins_regular"
        android:background="@drawable/custom_input"
        android:paddingStart="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subTextSignup" />

    <EditText
        android:id="@+id/lastNameInputSignup"
        android:layout_width="328dp"
        android:layout_height="58dp"
        android:layout_marginTop="29dp"
        android:ems="10"
        android:inputType="text"
        android:hint="Sobrenome"
        android:fontFamily="@font/poppins_regular"
        android:background="@drawable/custom_input"
        android:paddingStart="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameInputSignup" />

    <EditText
        android:id="@+id/emailInputSignup"
        android:layout_width="328dp"
        android:layout_height="58dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Email"
        android:fontFamily="@font/poppins_regular"
        android:background="@drawable/custom_input"
        android:paddingStart="10dp"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lastNameInputSignup" />

    <EditText
        android:id="@+id/passwordInputSignup"
        android:layout_width="328dp"
        android:layout_height="58dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Senha"
        android:fontFamily="@font/poppins_regular"
        android:background="@drawable/custom_input"
        android:paddingStart="10dp"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailInputSignup" />

    <EditText
        android:id="@+id/confirmPasswordInputSignup"
        android:layout_width="328dp"
        android:layout_height="58dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Confirmar senha"
        android:fontFamily="@font/poppins_regular"
        android:background="@drawable/custom_input"
        android:paddingStart="10dp"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/buttonSignup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordInputSignup"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/buttonSignup"
        android:layout_width="328dp"
        android:layout_height="58dp"
        android:layout_marginBottom="56dp"
        android:text="Registre-se"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>